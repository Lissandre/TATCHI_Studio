{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "Project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "team_members": {
      "type": "string",
      "required": true
    },
    "conception_duration": {
      "type": "string",
      "required": true
    },
    "md_type": {
      "type": "string"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "illustrations": {
      "type": "component",
      "repeatable": true,
      "component": "sections.illustrations"
    }
  }
}
